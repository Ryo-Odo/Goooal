<div class="col-md-6" id="main_div">

  <div class="goal_detail">
    <table>
      <tr>
        <td>
          <a><%= link_to @tweet.goal.user.profile.user_name, user_path(@tweet.goal.user.id) %></a>
          <a><%= link_to "@" + @tweet.goal.user.user_account_name, user_path(@tweet.goal.user.id) %></a>
          <a>
            <% if current_user == @tweet.goal.user%>
              <%= link_to '削除', tweet_path(@tweet.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %>
            <% end %>
          </a>
        </td>
      </tr>
      <tr>
        <td>
          <a><%= link_to @tweet.goal.goal_title, goal_path(@tweet.goal.id) %></a>
        </td>
      </tr>
      <tr>
        <td class="description"><%= simple_format(@tweet.content) %></td>
      </tr>
      <tr class= "goal_bottom">
        <td>
          <a>タグ:
            <% @tweet.tweet_tags.each do |tweet_tag|%>
              <%= link_to tweet_tag.tweet_tag_name, tweets_path(:q=>{:tweet_tags_tweet_tag_name_eq=>tweet_tag.tweet_tag_name}, :commit=>"タグで検索") %>
            <% end %>
          </a>
        </td>
      </tr>
    </table>
  </div>

</div>

<div class="col-md-3" id="right_div">
  <div class="right_side">
  </div>
</div>
