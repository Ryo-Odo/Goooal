<div class="col-md-6" id="main_div">

  <div class="goal_search">
    <div class="">
      <%= search_form_for @search do |f| %>
        <%= f.label :goal_title_or_description, "Keyword" %>
        <%= f.search_field :goal_title_or_description_cont %>

        <%= f.submit "検索" %>
      <% end %>
    </div>
  </div>

  <div class="goal_index">
    <table>
      <% @goals.each do |goal| %>
        <tr>
          <td><%= goal.goal_title %></td>
          <td><%= goal.description %></td>
        </tr>
        <td><%= link_to '詳細', goal_path(goal.id) %></td>
        <td><%= link_to '削除', goal_path(goal.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
      <% end %>
    </table>
  </div>
  
</div>

<div class="col-md-3" id="right_div">
  <div class="right_side">
    <h1>test</h1>
  </div>
</div>
