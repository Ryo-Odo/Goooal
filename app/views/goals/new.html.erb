<div class="col-md-6" id="main_div">
  <div class="goal_create">

    <% if @goal.errors.any? %>
    <div id="error_explanation">
      <h2><%= @goal.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @goal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="new_form">
      <%= form_with( model: @goal, local: true ) do |f| %>
        <%= f.text_field :goal_title, :placeholder => "ゴールタイトルを入力", :class => 'text_field' %> <br>
        <%= f.text_area :description, :placeholder => "詳細を入力", :class => 'text_area' %> <br>
        <%= f.text_field :goal_tag_name, :placeholder => "タグを入力", :class => 'text_field' %> <br>
        <%= f.submit "登録する" %>
      <% end %>
    </div>

  </div>
</div>

<div class="col-md-3" id="right_div">
  <div class="right_side">
  </div>
</div>
