<% if @goal.errors.any? %>
<div id="error_explanation">
  <h2><%= @goal.errors.count %>件のエラーがあります。</h2>
  <ul>
    <% @goal.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with( model: @goal, local: true ) do |f| %>
  <%= f.label :goal_title, "タイトル" %> <br>
  <%= f.text_field :goal_title %> <br>
  <%= f.label :description, "詳細" %> <br>
  <%= f.text_area :description %> <br>
  <%= f.submit "登録する" %>
<% end %>
