<div class="col-md-6" id="main_div">
  <div class="profile_edit">

    <div class="profile_form">
      <%= form_with( model: @profile, local: true ) do |f| %>
        <%= f.label :user_name, "ユーザー名" %><br>
        <%= f.text_field :user_name, :placeholder => "15文字以内で入力", :class => 'profile_text_field'%> <br>
        <%= f.label :introduction, "自己紹介" %><br>
        <%= f.text_area :introduction, :placeholder => "255文字以内で入力", :class => 'profile_text_area' %> <br>
        <%= f.submit "登録する" %>
      <% end %>
    </div>

  </div>
</div>

<div class="col-md-3" id="right_div">
  <div class="right_side">
  </div>
</div>






